/* components/searchItem/searchItem.wxss */
.container {
  padding: 2%;
  border-radius: 10rpx;
  margin-bottom: 2%;
}
.reminding {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 2% 0% 0%;
  border-radius: 10rpx;
  font-weight: 600;
}
.myRecode{
  display: flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  border-radius: 20rpx;
  width: 400rpx;
  height: 400rpx;
}
.recode{
  width: 200rpx;
  height: 200rpx;
  background: #2aaa03;
  border-radius: 50%;
  text-align: center;
  color: #FFFFFF;
  line-height: 200rpx;
  position: relative;
}
.ripple{
  position: absolute;
  top:0;
  left:0;
  right:0;
  bottom:0;
  border-radius: 50%;
  border:2px solid #2aaa03;
}